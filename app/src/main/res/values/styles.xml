<resources>

    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@drawable/recycle_divider</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_800</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/md_white_1000</item>
        <item name="android:background">@color/md_green_500</item>

    </style>

    <style name="circle_no_size_pading">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="default_circle_size">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="text_color">
        <item name="android:textColor">@color/md_grey_900</item>
    </style>
    <style name="et_text_bg">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorHint">@color/md_grey_800</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:background">@drawable/base_et_bg</item>
    </style>
    <style name="base_click_btn">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/circle_rect_green</item>
        <item name="android:textColor">@color/md_grey_100</item>
    </style>
</resources>
