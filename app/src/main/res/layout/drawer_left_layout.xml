<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@color/md_white_1000"
    >


    <TextView
        android:padding="16dp"
        android:id="@+id/dataFromSD"
        android:textColor="#99000000"
        android:text="从SD卡导入数据"
        android:textSize="20sp"
        android:gravity="center|start"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="16dp"
        android:text="当应用卸载后重新导入导出在SDCard的备份密码，已导入的情况下导入会使得密码重复"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/md_grey_300"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:padding="16dp"
        android:id="@+id/dataToSD"
        android:layout_marginTop="16dp"
        android:textColor="#99000000"
        android:text="导出数据到SD卡"
        android:textSize="20sp"
        android:gravity="center|start"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="16dp"
        android:text="将当前应用中的密码加密后到出到SDCard，重复导出会覆盖之前的密码"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/md_grey_300"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:padding="16dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#00ffffff"
            android:textColor="#99000000"
            android:text="应用锁"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:id="@+id/lockSwitcher"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle_white"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <TextView
        android:padding="16dp"
        android:id="@+id/reset_pass"
        android:text="重置密码"
        android:background="@null"
        android:textSize="20sp"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/md_grey_300"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:onClick="HelpClick"
        android:id="@+id/help"
        android:padding="16dp"
        android:text="使用帮助"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/md_grey_300"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <TextView
        android:padding="16dp"
        android:text="如有问题或建议请联系\nQQ：760625325"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    </ScrollView>