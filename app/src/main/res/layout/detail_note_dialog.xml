<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dNote_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/label_bg"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/md_white_1000"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dNote_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dNote_type"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dNote_des"
        style="@style/et_text_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dNote_type"
        android:layout_marginTop="8dp"
        android:background="@color/md_grey_100"
        android:cursorVisible="true"
        android:fitsSystemWindows="true"
        android:gravity="start|center"
        android:inputType="textMultiLine"
        android:minHeight="80dp"
        android:overScrollMode="always"
        android:padding="8dp"
        android:singleLine="false" />

    <Button
        android:id="@+id/reedit_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dNote_des"
        android:layout_marginTop="16dp"
        android:background="@drawable/basic_click"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp" />
</RelativeLayout>